{
  "name": "claude-tg",
  "version": "1.0.0",
  "description": "Bridge Claude Code with Telegram for two-way communication",
  "main": "src/bot.js",
  "bin": {
    "claude-tg": "./src/cli.js"
  },
  "scripts": {
    "start": "node src/bot.js",
    "setup": "node src/setup.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "node-telegram-bot-api": "^0.67.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "vitest": "^2.1.9"
  }
}
